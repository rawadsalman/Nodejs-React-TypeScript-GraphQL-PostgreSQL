{
  "name": "galaxy-servce-v2",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=15.2",
    "npm": ">=7.0.10"
  },
  "description": "",
  "main": "./src/app.ts",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "start:inspect": "npm run build && node --inspect dist/app.js",
    "start:vscodedebug": "npm run build && node --inspect-brk=9229 dist/app.js",
    "start:watch": "nodemon -e ts --exec npm run start:inspect",
    "dev": "npm run start:watch",
    "test": "jest --coverage --watch --runInBand",
    "test:ci": "jest --coverage --watchAll=false --runInBand",
    "build": "babel src --out-dir dist --extensions \".ts\" --copy-files --source-maps inline",
    "clean": "rimraf dist coverage",
    "generate-api-types": "swagger-typescript-api -p ./src/config/swagger.yaml -o ./generated -n api.ts --no-client",
    "migrate": "npx knex migrate:latest",
    "seed": "npx knex seed:run",
    "cleanDB": "docker-compose -f docker/docker-compose.yml down && docker-compose -f docker/docker-compose.yml up -d",
    "cleanDBMigrateAndSeed": "npm run cleanDB && npm run migrate && npm run seed",
    "heroku-postbuild": "npm run build && npm run migrate"
  },
  "author": "Spacegoats Engineering <engineering@spacegoats.io>",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "body-parser": "^1.19.0",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "curl": "^0.1.4",
    "dayjs": "1.10.4",
    "dayjs-plugin-utc": "0.1.2",
    "dotenv-flow": "3.2.0",
    "express": "4.17.1",
    "express-graphql": "^0.12.0",
    "express-joi-validation": "5.0.0",
    "express-pino-logger": "6.0.0",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.12.4",
    "http-status": "1.5.0",
    "knex": "0.95.4",
    "lint-staged": "10.5.4",
    "pg": "8.5.1",
    "pino": "6.11.2",
    "pino-multi-stream": "5.3.0",
    "regenerator-runtime": "^0.13.7",
    "ts-node": "9.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.13.14",
    "@babel/core": "7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-typescript": "7.13.0",
    "@types/body-parser": "^1.19.0",
    "@types/cls-hooked": "^4.3.3",
    "@types/compression": "^1.7.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.11",
    "@types/express-pino-logger": "4.0.2",
    "@types/hapi__joi": "17.1.6",
    "@types/jest": "26.0.22",
    "@types/node-fetch": "2.5.10",
    "@types/pg": "7.14.11",
    "@types/pino": "6.3.7",
    "@types/pino-multi-stream": "5.1.0",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "fetch-mock-jest": "1.5.1",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-spec-reporter": "1.0.16",
    "mockdate": "^3.0.5",
    "nodemon": "2.0.7",
    "pino-pretty": "4.7.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-empty-function": [
        0
      ],
      "ignoreRestSiblings": 0,
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "src/config/"
    ],
    "watchPathIgnorePatterns": [
      "node_modules/",
      "src/config/",
      "dist/",
      "coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ],
    "reporters": [
      "default",
      "jest-spec-reporter"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/proposal-class-properties"
    ]
  }
}
